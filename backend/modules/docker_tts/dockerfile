# Base image with CUDA support
FROM pytorch/pytorch:2.8.0-cuda12.9-cudnn9-devel

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libsndfile1 \
    ffmpeg \
    git \
 && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies - EXACT versions from working tts_op2
RUN pip install --no-cache-dir \
    numpy==1.26.4 \
    soundfile==0.13.1 \
    transformers==4.50.3 \
    tokenizers==0.21.4 \
    fastapi==0.122.0 \
    uvicorn==0.38.0 \
    python-multipart==0.0.20 \
    accelerate==1.12.0

# Install IndicF5 from GitHub
RUN pip install --no-cache-dir git+https://github.com/ai4bharat/IndicF5.git

# Copy application code
COPY . .

# Expose port for FastAPI
EXPOSE 8005

# Command to run the application
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8005"]